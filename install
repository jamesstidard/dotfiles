#!/usr/bin/env bash

set -e

DEFAULT_CONFIG_BODY="base"
CONFIG_PREFIX="install."
CONFIG_SUFFIX=".conf.yaml"
DOTBOT_DIR="dotbot"

DOTBOT_BIN="bin/dotbot"
BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

cd "${BASEDIR}"
git submodule update --init --recursive "${DOTBOT_DIR}"
git submodule update --init --recursive "dotbot-asdf"
git submodule update --init --recursive "dotbot-brewfile"
git submodule update --init --recursive "dotbot-vscode"

for conf in ${DEFAULT_CONFIG_BODY} ${@}; do
    "${BASEDIR}/${DOTBOT_DIR}/${DOTBOT_BIN}" -v -d "${BASEDIR}" --plugin-dir dotbot-vscode --plugin-dir dotbot-brewfile --plugin-dir dotbot-asdf -c "${CONFIG_PREFIX}${conf}${CONFIG_SUFFIX}"
done
